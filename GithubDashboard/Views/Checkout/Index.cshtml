@model GithubDashboard.Data.Order

@{
    ViewData["Title"] = "Checkout";
}

<ul>
    @foreach (var productOrder in Model.ProductOrders)
    {
        <li>@productOrder.Product.Name - @productOrder.Product.Price - @productOrder.Count</li>
    }
</ul>

<div>Order Id - @Model.Id</div>
<div>Full Price - @Model.Price</div>

<form action="/pay/@Model.Id" method="Post">
    <input type="hidden" name="price" value="@Model.Price" />
    <input type="submit" value="Pay" />
</form>